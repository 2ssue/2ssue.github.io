{
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
    ],
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "./src/*"
            ],
        },
        "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "skipLibCheck": true,
    }
}